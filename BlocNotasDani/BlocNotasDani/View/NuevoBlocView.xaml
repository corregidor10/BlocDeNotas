<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlocNotasDani.View.NuevoBlocView"
             Title="{Binding Titulo}">

  <StackLayout>
    <Label Text="Nombre" VerticalOptions="Center" HorizontalOptions="Center"></Label>
    <Entry Text="{Binding Bloc.Nombre}"></Entry>
    <Button Text="Guardar" Command="{Binding CmdGuardar}" BackgroundColor="Green" TextColor="Transparent" ></Button>
  </StackLayout>
  
  
</ContentPage>