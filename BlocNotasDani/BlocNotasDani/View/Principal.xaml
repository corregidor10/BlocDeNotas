<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlocNotasDani.View.Principal"
  Title="{Binding Titulo}">
  <StackLayout>
    <ListView ItemsSource="{Binding Blocs, Mode=TwoWay}" SelectedItem="{Binding BlocSeleccionado, Mode=TwoWay}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Nombre}" Detail="{Binding Fecha}"></TextCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>


    <Button Text="Nuevo Bloc" Command="{Binding CmdNuevo}" BorderColor="Black" BackgroundColor="Blue"></Button>
  </StackLayout>
</ContentPage>